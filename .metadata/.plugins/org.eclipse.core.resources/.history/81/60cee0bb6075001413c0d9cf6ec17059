package java;

public class Coche {
	
	String marca;
	String modelo;
	String color;
	String matricula;
	
	float velocidad;
	float maxDeposito;
	float ltrDeposito;
	boolean[] stadoPuertas;
	int revoluciones;	
	
	
	Coche(String _marca, String _modelo, String _color, String _matricula){
		marca = _marca;
		modelo = _modelo;
		color = _color;
		matricula = _matricula;
	}
	
	void acelerar(){
		velocidad++;
	}
	
	void embrague(){
		velocidad--;
	}
	
	
	void girarDerecha(){
		
	}
	
	void girarIzquierda(){
		
	}
	
	void llenarDeposito(float litros){
		if(maxDeposito <= ltrDeposito + litros)
			ltrDeposito = maxDeposito;
		else
			ltrDeposito = ltrDeposito + litros;
	}
		
}
