package clases.internas;

public class ClaseInterna {
	
	private String nombreClase = "CLASE_INTERNA";
	
	
	ClaseInterna(){
		new ClasePrivada();
		new ClaseProtegida();
		new ClasePublica();
	}

	/*
	 * Se pueden definir subclases privadas, protegidas o publicas.
	 */
	
		private class ClasePrivada{
			ClasePrivada(){ System.out.println("Clase Privada de " + nombreClase);}
		}
	
		protected class ClaseProtegida{
			ClaseProtegida(){ System.out.println("Clase Protegida de " + nombreClase);}
		}
		
		public class ClasePublica{
			ClasePublica(){System.out.println("Clase Publica " + nombreClase);};
		}
	
		
	
	public static void main(String[] args) {
		new ClaseInterna();
		
		/*
		 *  <!> Error al declarar:
		 *  
		*	new ClasePrivada();
		*	new ClaseProtegida();
		*	new ClasePublica();
		*
		*	Necesitaríamos declarar las clases como static:
		*
		*	No enclosing instance of type ClaseInterna is accessible. 
		*	Must qualify the allocation with an enclosing instance of 
		*	type ClaseInterna (e.g. x.new A() where x is an instance 
		*	of ClaseInterna).
		*
		**/
	}
	
}
