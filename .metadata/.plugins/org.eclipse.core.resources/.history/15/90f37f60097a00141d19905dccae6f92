package clases.internas;

public class ClaseInterna {
	
	ClaseInterna(){
		new ClasePrivada();
		new ClaseProtegida();
		new ClasePublica();
	}

	/*
	 * Se pueden definir subclases privadas, protegidas o publicas.
	 */
	
		private static class ClasePrivada{
			ClasePrivada(){ System.out.println("Clase Privada");}
		}
	
		protected static class ClaseProtegida{
			ClaseProtegida(){ System.out.println("Clase Protegida");}
		}
		
		public static class ClasePublica{
			ClasePublica(){System.out.println("Clase Publica");};
		}
	
	
	public static void main(String[] args) {
		new ClaseInterna();
		
		new ClasePrivada();
		new ClaseProtegida();
		new ClasePublica();
	}
	
}
