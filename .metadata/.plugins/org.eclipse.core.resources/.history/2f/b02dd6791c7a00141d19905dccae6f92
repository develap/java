package empleados;

import java.util.ArrayList;

import com.aeat.valida.Validador;


public class Empleado {
	
		Validador validador = new Validador();
	
		enum Sexo{h,m};
		public static final String LETRA_NIF = "TRWAGMYFPDXBNJZSQVHLCKE";

		private String nombre;
		private String apellido1;
		private String apellido2;
		private ArrayList<String> titulaciones;
		private long dni;
		private char letraDni;
		private String nuss;
		private int edad;
		private Sexo sexo;
		
		
		
		/**
		 * 
		 */
		public Empleado() {
			super();
		}
	

		/**
		 * @param nombre
		 */
		public Empleado(String nombre) {
			super();
			this.nombre = nombre;
		}



		public String getNombre() {
			return nombre;
		}



		public void setNombre(String nombre) {
			this.nombre = nombre;
		}



		public String getApellido1() {
			return apellido1;
		}



		public void setApellido1(String apellido1) {
			this.apellido1 = apellido1;
		}



		public String getApellido2() {
			return apellido2;
		}



		public void setApellido2(String apellido2) {
			this.apellido2 = apellido2;
		}



		public ArrayList<String> getTitulaciones() {
			return titulaciones;
		}



		public void setTitulaciones(ArrayList<String> titulaciones) {
			this.titulaciones = titulaciones;
		}



		public long getDni() {
			return dni;
		}



		public void setDni(long dni) throws Exception {
			this.letraDni = LETRA_NIF.charAt((int) (dni % 23));
			this.dni = dni;
			if(validador.checkNif(Long.toString(this.dni)+this.letraDni)<0)
				throw new Exception();
		}



		public String getNuss() {
			return nuss;
		}



		public void setNuss(String nuss) {
			this.nuss = nuss;
		}



		public int getEdad() {
			return edad;
		}



		public void setEdad(int edad) {
			this.edad = edad;
		}



		public Sexo getSexo() {
			return sexo;
		}



		public void setSexo(Sexo sexo) {
			this.sexo = sexo;
		}



		public String presentarInfo(){
			return 	"Nombre: " + this.nombre +
					", Dni: " + Long.toString(this.dni) + "-" + this.letraDni;
		}
}
